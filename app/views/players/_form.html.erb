<%= form_for(@player, html: { class: "form-horizontal" }) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="control-group">
      <%= f.label :first_name,
                  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :last_name,
                  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :number,
                  class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :number %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :team_id,
                  class: 'control-label' %>
      <div class="controls">
        <%= f.collection_select :team_id, Team.all,
                                :id, :name %>
        <%= link_to "New Team", new_team_path, class: "btn btn-success" %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
